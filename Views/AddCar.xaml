<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDWCert.Views.AddCar"
             Title="Carro Nuevo">
    <VerticalStackLayout>
        <Frame CornerRadius="100" HeightRequest="200" WidthRequest="200">
            <Image Source="{Binding CarModel.PhotoUrl}" Aspect="AspectFill"/>
        </Frame>

        <Entry Text="{Binding CarModel.Model}" Placeholder="Modelo" ></Entry>
        <Entry Text="{Binding CarModel.Brand}" Placeholder="Marca" ></Entry>
        <Entry Text="{Binding CarModel.Year}" Placeholder="AÃ±o" Keyboard="Numeric" ></Entry>
        <Entry Text="{Binding CarModel.Description}" Placeholder="Descripcion" ></Entry>
        <Entry Text="{Binding CarModel.Price}" Placeholder="Precio"></Entry>

        <Button Text="Tomar Foto" Command="{Binding TakePhotoCommand}"></Button>
        <Button Text="Aceptar" Command="{Binding AddCarCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>